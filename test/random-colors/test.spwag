define slide main() {
    ## Fill the slide with boxes of size 100 by 100
    var i = 0
    while (i < 900) {
        var j = 0
        while (j < 600) {
            var boxname = "box-" + i + "-" + j
            
            colorbox(boxname) {
                position-x(i)
                position-y(j)
            }

            j = j + 300
        }
        i = i + 300
    }
}

define comp colorbox(id) isa box(id) {
    var boxcolor = randomcolor()
    background-color(boxcolor)
    width(300px)
    height(300px)
    on-click(removecolor(id))
}

define func changecolor(id) {
    var mybox = get(id)
    var newboxcolor = randomcolor()
    mbox {
        background-color(newboxcolor)
    }
}

define func randomcolor() {
    var red = random(256)
    var blue = random(256)
    var green = random(256)
    var color = "rgb(" + red + "," + green + "," + blue + ")"
    return color
}